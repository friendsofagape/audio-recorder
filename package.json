{
	"name": "audio-recorder-rcl",
	"description": "A component for verse recording",
	"version": "0.1.1",
	"private": false,
	"homepage": "https://github.com/friendsofagape/audio-recorder",
	"repository": {
		"type": "git",
		"url": "https://github.com/friendsofagape/audio-recorder"
	},
	"license": "MIT",
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"build": "react-scripts build",
		"build:tailwind": "tailwind build src/tailwind.css -o src/tailwind.output.css",
		"watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwind.output.css -c 'npm run build:tailwind'",
		"start": "npm-run-all build:tailwind --parallel watch:tailwind start:electron",
		"dev": "npm-run-all build:tailwind --parallel watch:tailwind start:styleguidist",
		"start:styleguidist": "styleguidist server",
		"start:electron": "concurrently -k \"styleguidist server\" \"npm:electron\"",
		"styleguide:build": "styleguidist build",
		"electron": "wait-on tcp:6060 && electron .",
		"prebuild": "npm run build:tailwind",
		"prepublishOnly": "rm -fr ./dist & babel ./src --out-dir ./dist -s inline",
		"predeploy": "yarn styleguide:build",
		"deploy": "gh-pages -d styleguide",
		"postpublish": "yarn deploy"
	},
	"dependencies": {
		"@headlessui/react": "^1.3.0",
		"@material-ui/core": "^4.12.1",
		"@material-ui/icons": "4.11.2",
		"chokidar-cli": "^2.1.0",
		"electron-is-dev": "^1.2.0",
		"file-saver": "^2.0.2",
		"localforage": "1.9.0",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"postcss": "8.3.5",
		"postcss-cli": "^8.3.1",
		"prop-types": "^15.7.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-styleguidist": "^11.1.7",
		"tailwindcss": "^2.2.4",
		"yarn": "^1.22.10"
	},
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-react": "^7.0.0",
		"babel-loader": "^8.0.6",
		"babel-plugin-istanbul": "^5.2.0",
		"concurrently": "^5.2.0",
		"cross-env": "^6.0.3",
		"css-loader": "^3.2.0",
		"electron": "^13.1.6",
		"file-loader": "^4.2.0",
		"istanbul-lib-coverage": "^2.0.5",
		"start-server-and-test": "^1.12.6",
		"style-loader": "^1.0.0",
		"url-loader": "^2.1.0",
		"wait-on": "^5.1.0",
		"webpack": "^4.39.1"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"main": "public/electron.js",
	"files": [
		"dist/*"
	]
}
